<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>

        <%- include('../partials/nav.ejs') %>

        <div class="create-blog content">
            <h1><%= global.churchName %></h1>
            <h2><%= title %></h2>
            <form action="/bills" method="POST">
                <input type="hidden" id="churchId" name="churchId" value="<%= churchId %>">
                <label for="payeeId">Access By</label>
                <select name="payeeId" >
                    <option value="0"></option>
                    <% if(payees.length > 0) { %>
                        <% payees.forEach(payee => { %>
                        <option value="<%= payee.payeeId %>"><%= payee.name %></option>
                        <% }) %>
                    <% } %>
                </select>
                <label for="totalAmount">Total Amount</label>
                <input type="number" id="totalAmount" name="totalAmount" step="any" placeholder="0.00" required>
                <label for="amountDue">Amount Due</lable>
                <input type="number" id="amountDue" name="amountDue" step="any" placeholder="0.00" required>
                <label for="dueDate">Due Date</label>
                <input type="date" id="dueDate" name="dueDate" value="<%= new Date() %>">
                <label for="comment">Comment</label>
                <input type="text" id="comment" name="comment" >
                <input type="hidden" id="status" name="status"  value="Active" >
                <button>Submit</button>
            </form>
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>