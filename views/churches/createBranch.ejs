<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>

        <%- include('../partials/nav.ejs') %>
        <h1><%= result.name %></h1>
        <h3>Add New Branch</h3>
        <div class="create-blog content">
            <form action="/churches/createBranch" method="POST">
                <input type="hidden" id="parentChurch" name="parentChurch" value="<%=parentId %>"" > 
                <label for="name">Branch Name</label>
                <input type="text" id="name" name="name" required>
                <!-- <label for="title">Church Title</label>
                <input type="text" id="title" name="title" required> -->
                <label for="founded">Date Founded</label>
                <input type="date" id="founded" name="founded" required>
                <!-- <label for="address1">Address1</label>
                <input type="text" id="address1" name="address1" >
                <label for="address2">Address2</label>
                <input type="text" id="address2" name="address2" > -->
                <label for="city">City</label>
                <input type="text" id="city" name="city" >
                <!-- <label for="state">State</label>
                <input type="text" id="state" name="state" >
                <label for="zipcode">Zip Code</label>
                <input type="text" id="zipcode" name="zipcode" >-->
                <label for="country">Country</label>
                <input type="text" id="country" name="country" > 
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" >
                <label for="email">Email</label>
                 <input type="email" id="email" name="email" >
                <!--<label for="parent">Parent Church</label>
                <input type="text" id="parent" name="parent" >
                <label for="picture">Picture</label>
                <input type="text" id="picture" name="picture" > -->
                <button>Submit</button>
            </form>
            <div>
                <% if(result === null) { %>
                    <p>No church branch data available</p>
                   <% } else { %>
                    <% if(result.branchChurches.length > 0) { %>
                        <h3>Existing Branches:</h3>
                        <% result.branchChurches.forEach(church => { %>
                            <a class="single" href="/churches/<%= church._id %>" >
                        <p class="title"><%= church.name %> (<%= church.city %>) </p>
                        </a>
                        <% }) %>
                    <% } %>
               <% } %>
            </div>
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>