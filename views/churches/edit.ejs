<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        
        <%- include('../partials/nav.ejs') %>

        <div class="create-blog content">
            <h1><%= global.churchName %></h1>
            <h2><%= title %></h2>
            
                    <form action="/churches/edited/<%= church.churchId %>" method="post">
                        <input type="hidden" id="churchId" name="churchId" value="<%= church.churchId %>">
                        <label for="name">Church Name</label>
                        <input type="text" id="name" name="name" value="<%= church.name %>"" required>
                        <label for="title">Church Title</label>
                        <input type="text" id="title" name="title" value="<%= church.title %>"" >
                        <label for="tagName">Tag Name</label>
                        <input type="text" id="tagName" name="tagName" value="<%= church.tagName%>"" required>
                        <label for="founded">Date Founded</label>
                        <input type="date" id="founded" name="founded" value="<%= moment(church.founded).format('YYYY-MM-DD') %>"" required>
                        <label for="address1">Address1</label>
                        <input type="text" id="address1" name="address1" value="<%= church.address1 %>"" >
                        <label for="address2">Address2</label>
                        <input type="text" id="address2" name="address2" value="<%= church.address2 %>"" >
                        <label for="city">City</label>
                        <input type="text" id="city" name="city" value="<%= church.city %>"" >
                        <label for="state">State</label>
                        <input type="text" id="state" name="state" value="<%= church.state %>"" >
                        <label for="zipcode">Zip Code</label>
                        <input type="text" id="zipcode" name="zipcode" value="<%= church.zipcode %>"" >
                        <label for="country">Country</label>
                        <input type="text" id="country" name="country" value="<%= church.country %>"" >
                        <label for="phone">Phone</label>
                        <input type="phone" id="phone" name="phone" value="<%= church.phone %>"" >
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= church.email %>"" >
                        <label for="vision">Vision</label>
                        <textarea type="text" id="vision" name="vision"><%= church.vision %></textarea>
         
                        <label for="status">Status</label>
                        <select name="status">
                            <option value="None"></option>
                            <% if(status.length > 0) { %>
                                <% status.forEach(statuz => { %>
                                    <% if(statuz.name === church.status) { %>
                                        <option value= "<%= statuz.name %>" selected ><%= statuz.name %></option> 
                                        <% } else { %>
                                          <option value= "<%= statuz.name %>"><%= statuz.name %></option> 
                                    <% } %>
                                <% }) %>
                            <% } %>
                        </select>                        
                        <button>Submit</button>
                    </form>
              

        </div>
        <%- include('../partials/footer.ejs') %>

    
    </body>

</html>