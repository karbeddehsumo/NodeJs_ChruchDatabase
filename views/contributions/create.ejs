<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>

        <%- include('../partials/nav.ejs') %>

        <div class="create-blog content">
            <h2><%= title %></h2>
            <h3><%= member.firstName %> <%= member.middleName %> <%= member.lastName %></h3>
            <form action="/contributions" method="POST">
                <input type="hidden" id="churchId" name="churchId" value="<%= churchId %>"" >
                <input type="hidden" id="memberId" name="memberId" value="<%= member.memberId %>"" >
                <label for="typeId">Fund</label>
                <select name="typeId">
                    <option value="None"></option>
                    <% if(contributionTypes.length > 0) { %>
                        <% contributionTypes.forEach(contributionType => { %>
                        <option value="<%= contributionType.constantId %>"><%= contributionType.name %></option>
                        <% }) %>
                    <% } %>
                </select>
                <label for="contributionDate">Date</label>
                <input type="date" id="contributionDate" name="contributionDate" value="<%= new Date().toISOString().substr(0,10) %>" required>
                <label for="amount">Amount</label>
                <input type="number" id="amount" name="amount" step="any" required >
                <label for="checkNumber">Check Number</label>
                <input type="text" id="checkNumber" name="checkNumber" >
                <label for="comment">Comment</label>
                <input type="textbox" id="comment" name="comment" >
                <button>Submit</button>
            </form>
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>