<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
          <%- include('../partials/nav.ejs') %>
          
        <div class="blogs content">
            <h1><%= global.churchName %></h1>
            <h2>All Members</h2>
            <% if(members === null) { %>
                <p>No members data available</p>
               <% } else { %>
                <% if(members.length > 0) { %>
                    <% members.forEach(member => { %>
                        <a class="single" href="/contributions/<%= member._id %>" >
                    <h3 class="title"><%= member.lastName %>, <%= member.firstName %> <a href="/contributions/create/<%= member._id %>">Add Contribution</a></h3>                  
                    </a>
                    <% }) %>
                <% } %>
           <% } %>
            
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>