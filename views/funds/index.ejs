<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
          <%- include('../partials/nav.ejs') %>
          
        <div class="blogs content">
            <h1><%= churchName %></h1>
            <a href="/funds/create/<%= churchId %>">Add Fund</a>
            <h2>All Funds</h2>
            <% if(funds !== undefined ) { %>
                <p>No funds data available</p>
               <% } else { %>
                <% if(funds.length > 0) { %>
                    <% funds.forEach(fund => { %>
                        <a class="single" href="/funds/<%= fund._id %>" >
                    <h3 class="title"><%= fund.name %> </h3>
                    <p class="snippet"><%= fund.category %></p>
                    </a>
                    <% }) %>
                <% } %>
           <% } %>
            
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>