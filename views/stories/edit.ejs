<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>

        <%- include('../partials/nav.ejs') %>
        <h1><%= global.churchName %></h1>
        <h2>Add New Property</h2>
        <div class="create-blog content">
            <form action="/stories/edited/<%= story.storyId %>" method="post">
                <input type="hidden" id="churchId" name="churchId" value="<%= story.churchId %>"">
                <label for="ministryId">Ministry</label>
                <select name="ministryId">
                    <option value="None"></option>
                    <% if(ministries.length > 0) { %>
                        <% ministries.forEach(ministry => { %>
                            <% if(ministry.ministryId === story.ministryId) { %>
                                <option value="<%= ministry.ministryId %>" selected ><%= ministry.name %></option> 
                                <% } else { %>
                                    <option value="<%= ministry.ministryId %>"><%= ministry.name %></option> 
                            <% } %>
                        <% }) %>
                    <% } %>
                </select>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= story.title %>"">
                <label for="subTitle">SubTitle</label>
                <input type="text" id="subTitle" name="subTitle" value="<%= story.subTitle %>"">
                <label for="intro">Intro</label>
                <textarea id="intro" name="intro"><%= story.intro %></textarea>
                <label for="story">Story</label>
                <textarea id="story" name="story"><%= story.story %></textarea>
                <label for="publishedStartDate">Published Start Date</label>
                <% if(isNaN(story.publishedStartDate.valueOf())) { %>
                    <input type="date" id="publishedStartDate" name="publishedStartDate" value="<%=  new Date() %>"">
                    <% } else { %>
                        <input type="date" id="publishedStartDate" name="publishedStartDate" value="<%= story.publishedStartDate.toISOString().substr(0,10) %>"">
                <% } %>                
                <label for="publishEndDate">Published End Date</label>
                <% if(isNaN(story.publishedEndDate.valueOf())) { %>
                    <input type="date" id="publishedEndDate" name="publishedEndDate" value="<%=  new Date() %>"">
                    <% } else { %>
                        <input type="date" id="publishedEndDate" name="publishedEndDate" value="<%= story.publishedEndDate.toISOString().substr(0,10) %>"">
                <% } %>                
                <label for="author">Author</label>
                <input type="text" id="author" name="author" value="<%= story.author %>"">
                <label for="status">Status</label>
                <select name="status">
                    <option value="None"></option>
                    <% if(status.length > 0) { %> 
                        <% status.forEach(statuz => { %>
                            <% if(statuz.name === story.status) { %>
                                <option value="<%= statuz.name %>" selected ><%= statuz.name %></option> 
                                <% } else { %>
                                    <option value="<%= statuz.name %>"><%= statuz.name %></option> 
                            <% } %>
                        <% }) %>
                    <% } %>
                </select>  
                <button>Submit</button>
            </form>
        </div>
        <%- include('../partials/footer.ejs') %>
    </body>

</html>